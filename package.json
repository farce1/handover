    "simple-git": "^3.31.1",
    "sisteransi": "^1.0.5",
    "smol-toml": "^1.6.0",
    "web-tree-sitter": "^0.25.10",
    "yaml": "^2.7.0",
    "zod": "^3.24.0",
    "zod-to-json-schema": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tree-sitter-wasms": "^0.1.13",
    "tsup": "^8.0.0",
